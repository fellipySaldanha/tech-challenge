{
    "openapi": "3.1.0",
    "info": {
        "title": "Projeto Lanchonete | Tech Challenge",
        "description": "API Documentation",
        "version": "1.0.0"
    },
    "basePath": "/",
    "paths": {
        "/product": {
            "post": {
                "tags": [
                    "Products"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "itemType": {
                                        "type": "number"
                                    },
                                    "itemName": {
                                        "type": "string"
                                    },
                                    "itemPrice": {
                                        "type": "number"
                                    },
                                    "itemDescription": {
                                        "type": "string"
                                    },
                                    "itemImgUrl": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "example1": {
                                    "summary": "Valores possíveis para o campo <itemType>",
                                    "value": {
                                        "1": "Bebida",
                                        "2": "Lanche",
                                        "3": "Acompanhamento",
                                        "4": "Sobremesa"
                                    }
                                },
                                "example2": {
                                    "summary": "Exemplo de corpo de requisição",
                                    "value": {
                                        "itemType": 1,
                                        "itemName": "Exemplo de item",
                                        "itemPrice": 9.99,
                                        "itemDescription": "Descrição do item",
                                        "itemImgUrl": "https://example.com/item.jpg"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto Criado"
                    },
                    "400": {
                        "description": "Erro ao criar produtos, esta faltando parametros"
                    }
                }
            },
            "get": {
                "tags": [
                    "Products"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produtos encontrados"
                    },
                    "400": {
                        "description": "Erro ao alterar buscar produtos"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Products"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number",
                        "enum": [1,2,3,4]
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "itemType": {
                                        "type": "number"
                                    },
                                    "itemName": {
                                        "type": "string"
                                    },
                                    "itemPrice": {
                                        "type": "number"
                                    },
                                    "itemDescription": {
                                        "type": "string"
                                    },
                                    "itemImgUrl": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "example1": {
                                    "summary": "Valores possíveis para o campo <itemType>",
                                    "value": {
                                        "1": "Bebida",
                                        "2": "Lanche",
                                        "3": "Acompanhamento",
                                        "4": "Sobremesa"
                                    }
                                },
                                "example2": {
                                    "summary": "Exemplo de corpo de requisição",
                                    "value": {
                                        "itemType": 1,
                                        "itemName": "Exemplo de item",
                                        "itemPrice": 9.99,
                                        "itemDescription": "Descrição do item",
                                        "itemImgUrl": "https://example.com/item.jpg"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto Alterado"
                    },
                    "400": {
                        "description": "Erro ao alterar produtos, esta faltando parametros"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Products"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto deletado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao deletar produto"
                    }
                }
            }
        },
        "/product/findbycategory": {
            "get": {
                "tags": [
                    "Products"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "category",
                        "type": "number",
                        "description": "Valores possíveis: [1:Bebida, 2:Lanche, 3:Acompanhamento, 4:Sobremesa]"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produtos encontrados"
                    },
                    "400": {
                        "description": "Erro ao buscar produtos, esta faltando parametros"
                    }
                }
            }
        },
        "/customer": {
            "get": {
                "tags": [
                    "Customers"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    },
                    {
                        "in": "query",
                        "name": "cpf",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Clientes encontrados com sucesso"
                    },
                    "400": {
                        "description": "Erro ao buscar clientes"
                    }
                }
            },
            "post": {
                "tags": [
                    "Customers"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "cpf": {
                                        "type": "string"
                                    },
                                    "isActive": {
                                        "type": "boolean"
                                    }
                                }
                            },
                            "examples": {
                                "example1": {
                                    "summary": "Exemplo de corpo de requisição",
                                    "value": {
                                        "name": "João Fernandes da Cunha",
                                        "email": "joaofernandes@gmail.com",
                                        "cpf": "35380188044",
                                        "isActive": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cliente criado com sucesso"
                    },
                    "400": {
                        "description": "Erro CPF Inválido"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Customers"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
