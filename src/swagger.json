                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "cpf": {
                                        "type": "string"
                                    },
                                    "isActive": {
                                        "type": "boolean"
                                    }
                                }
                            },
                            "examples": {
                                "example1": {
                                    "summary": "Exemplo de corpo de requisição",
                                    "value": {
                                        "name": "João Fernandes da Cunha",
                                        "email": "joaofernandes@gmail.com",
                                        "cpf": "35380188044",
                                        "isActive": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cliente alterado com sucesso"
                    },
                    "400": {
                        "description": "Erro CPF Inválido"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Customers"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cliente deletado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao deletar cliente"
                    }
                }
            }
        },
        "/order": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pedidos listados com sucesso"
                    },
                    "400": {
                        "description": "Erro ao listar pedidos"
                    }
                }
            },
            "post": {
                "tags": [
                    "Orders"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "order_total": {
                                        "type": "number"
                                    },
                                    "customer_id": {
                                        "type": "string"
                                    },
                                    "order_items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "item_id": {
                                                    "type": "number"
                                                },
                                                "order_item_qtd": {
                                                    "type": "number"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "examples": {
                                "example1": {
                                    "summary": "Valores possíveis para o campo <item_id>",
                                    "value": {
                                        "1": "Bebida",
                                        "2": "Lanche",
                                        "3": "Acompanhamento",
                                        "4": "Sobremesa"
                                    }
                                },
                                "example2": {
                                    "summary": "Exemplo de corpo de requisição sem identificação do Cliente",
                                    "value": {
                                        "order_total": 50.99,
                                        "order_items": [
                                            {
                                                "order_item_qtd": 1,
                                                "item_id": 1
                                            }
                                        ]
                                    }
                                },
                                "example3": {
                                    "summary": "Exemplo de corpo de requisição com Cliente identificado",
                                    "value": {
                                        "order_total": 50.99,
                                        "customer_id": 1,
                                        "order_items": [
                                            {
                                                "order_item_qtd": 1,
                                                "item_id": 1
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Pedido criado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao criar pedido"
                    }
                }
            }
        },
        "/orderqueue": {
            "get": {
                "tags": [
                    "OrdersQueue"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Fila de pedidos listadas com sucesso"
                    },
                    "400": {
                        "description": "Erro ao listar fila"
                    }
                }
            },
            "patch": {
                "tags": [
                    "OrdersQueue"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "type": "number"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Status alterado com sucesso"
                    },
                    "400": {
                        "description": "Faltando parametro , favor prover o ID do pedido"
                    }
                }
            }
        }
